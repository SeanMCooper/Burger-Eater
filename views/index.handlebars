
<div id="container topMargin">

        <div class="jumbotron text-center">
            
                <h1>Lets eat burgers!</h1>
            
                <br>
                <h2>Try one out!</h2>

    </div>
</div>


<div class="container">
  <div class="row">
    <div class="col">
      
      <div id='avail'>
          <h2>Burgers up for grabs!</h2>
                    <ul>
                        {{#each burgers}} {{#unless this.devoured}}
                    <li>
                        {{this.id}}. {{this.burger_name}}

                    <form action="/{{this.id}}?_method=PUT" method="POST">
                    <input type="hidden" name="devoured" value="false">
                    <button class="btn btn-warning" type="submit">Eat Me!</button>
                </form>

                </li>
                    {{/unless}} {{/each}}
                </ul>
            </div>

    </div>
    <div class="col">
     
            <div id="col rightSide">
            <h2>Already Gone! </h2>

                    <ul>
                        {{#each burgers}} {{#if this.devoured}}
                        <li>
                            {{this.id}}. {{this.burger_name}}
                        </li>
                        {{/if}} {{/each}}
                    </ul>

        </div>

    </div>
  </div>
</div>



        <div class="jumbotron text-center">
         
              <h2>Add Burger: </h2>

        <form class="create-update-form" action="/" method="POST">
            <div class="form-group">
                <label for="dab">Burger:</label>
                <input type="text" id="dab" name="burger_name">
            </div>
            <button class="btn btn-primary" type="submit">Add Burger</button>
        </form> 

        </div>
</div>
</div>




